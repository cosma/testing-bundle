{
    "name": "cosma/testing-bundle",
    "type": "symfony-bundle",
    "description": "Testing Bundle",
    "keywords": ["test", "unit test", "acceptance test", "functional test"],
    "homepage": "https://bitbucket.org/cosma/testing-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Cosmin Voicu",
            "email": "cosmin.voicu@gmail.com",
            "homepage": "https://bitbucket.org/cosma"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "nelmio/solarium-bundle": "2.*",
        "h4cc/alice-fixtures-bundle": "*"
    },
    "require-dev": {
        "sensio/generator-bundle": "~2.3",

        "phpunit/phpunit": "~4.3",
        "phpunit/php-invoker": "*",
        "phpunit/phpunit-selenium": "~1.4",
        "doctrine/doctrine-fixtures-bundle": "2.2.*@dev",
        "liip/functional-test-bundle": "1.0.*@dev"
    },
    "suggest": {
        "symfony/console": "For using the console commands",
        "symfony/finder": "For using the translation loader and cache warmer",
        "symfony/form": "For using forms",
        "symfony/validator": "For using validation",
        "symfony/yaml": "For using the config:debug and yaml:lint commands",
        "doctrine/cache": "For using alternative cache drivers"
    },
    "autoload": {
        "psr-0": { "Cosma\\Bundle\\TestingBundle\\": "" }
    },
    "target-dir": "Cosma/Bundle/TestingBundle",
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}