{
    "name": "cosma/testing-bundle",
    "type": "symfony-bundle",
    "description": "Testing Bundle",
    "keywords": ["testing", "Symfony2", "Fixtures", "Doctrine", "ORM", "MongoDB", "phpunit", "selenium test"],
    "homepage": "http://github.com/cosma/testing-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Cosmin Voicu",
            "email": "cosmin.voicu@gmail.com",
            "homepage": "http://github.com/cosma"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "phpunit/phpunit": "4.*",
        "doctrine/orm": "~2.2,>=2.2.3",
        "symfony/framework-bundle": "2.8.*",
        "h4cc/alice-fixtures-bundle": "0.5.*",
        "solarium/solarium": "3.4.*",
        "ruflin/elastica": "3.*",
        "facebook/webdriver": "1.1.*",
        "predis/predis": "1.0.*",
        "mockery/mockery": "0.9.*"
    },
    "require-dev": {
        "symfony/browser-kit": "2.8.*"
    },
    "autoload": {
        "psr-4": { "Cosma\\Bundle\\TestingBundle\\": "" }
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
